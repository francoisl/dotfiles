{
  "cleanupPeriodDays": 99999,
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(git checkout:*)",
      "Bash(grep:*)",
      "Bash(mvn clean:*)",
      "Bash(mvn package:*)",
      "Bash(mvn test:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run lint-changed)",
      "Bash(rg:*)",
      "Bash(source:*)",
      "Bash(vssh:*)",
      "Edit",
      "WebFetch(domain:github.com)",
      "WebSearch",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(gh pr checkout:*)",
      "Bash(git fetch:*)",
      "Bash(gh search:*)",
      "Bash(npm run typecheck:*)",
      "Bash(awk:*)",
      "Bash(xargs git log --oneline --format=\"%H\" -1)",
      "Bash(xargs gh pr list:*)",
      "Bash(git branch:*)",
      "Bash(git tag:*)",
      "Bash(git show:*)",
      "Bash(npm test:*)",
      "Bash(npm run test:*)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_type",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_fill_form",
      "mcp__pinecone-mcp__search-records",
      "mcp__pinecone-mcp__describe-index-stats",
      "Skill(stack-overflow-search)",
      "mcp__pinecone__search-records",
      "mcp__victorialogs__query",
      "mcp__victorialogs__hits",
      "Read"
    ],
    "deny": [],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(gh api:*)"
    ],
    "defaultMode": "default"
  },
  "model": "opus",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/code/dotfiles/claude/notify-on-stop.fish"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/code/dotfiles/claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "javascript-typescript@claude-code-workflows": true,
    "backend-development@claude-code-workflows": true,
    "security-scanning@claude-code-workflows": true,
    "code-review-ai@claude-code-workflows": true,
    "full-stack-orchestration@claude-code-workflows": true,
    "code-documentation@claude-code-workflows": true,
    "clangd-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "promptSuggestionEnabled": false
}
